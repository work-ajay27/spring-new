<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- values must be provided with variable sequence -->
<bean class="com.tka.beans.Department" id="deptId">
<constructor-arg value="1"></constructor-arg>
<constructor-arg value="Quality Assurance"></constructor-arg>
<constructor-arg value="Nandurbar"></constructor-arg>
</bean>

<bean class="com.tka.beans.Employee" id="empId">
<constructor-arg value="101"></constructor-arg>
<constructor-arg value="Avisha"></constructor-arg>
<constructor-arg ref="deptId"></constructor-arg>
</bean>


</beans>